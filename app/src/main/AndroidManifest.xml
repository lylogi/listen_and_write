<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hoangdevelopers.listen_and_write">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.hoangdevelopers.listen_and_write.ReporterActivity"></activity>
        <activity
            android:name="com.hoangdevelopers.listen_and_write.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hoangdevelopers.listen_and_write.YouTubeFullModeLesson"
            android:label="@string/title_activity_you_tube_full_mode_lesson"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>